{
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "json",
        "markdown",
    ],
    "python.jediEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501,E203"
    ],
    "python.formatting.provider": "black",
    "explorer.keyMappings.global": {
        "i": false, // cancel default mapkey
        "*": "toggleSelection",
        "<tab>": "actionMenu",
        "h": "collapse",
        "l": [
            "expandable?",
            "expand",
            "open"
        ],
        "J": [
            "toggleSelection",
            "normal:j"
        ],
        "K": [
            "toggleSelection",
            "normal:k"
        ],
        "<cr>": [
            "expandable?",
            [
                "expanded?",
                "collapse",
                "expand"
            ],
            "open"
        ],
        "<bs>": "gotoParent",
        "s": "open:split",
        "v": "open:vsplit",
        "t": "open:tab",
        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "a": "addFile",
        "A": "addDirectory",
        "r": "rename",
        ".": "toggleHidden",
        "R": "refresh",
        "?": "help",
        "q": "quit",
        "<esc>": "esc",
        "X": "systemExecute",
        "gd": "listDrive",
        "f": "search",
        "F": "searchRecursive"
    },
    "markdownlint.config": {
        "MD007": {
            "indent": 4
        }
    }
}
